@model WebApplication1.Models.ManagersMasterData
@{
    ViewBag.Title = "AsignDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Správa uživatele</h2>
@using (Html.BeginForm("Save", "UsersControl"))
{
    <div class="form-group">
        @Html.LabelFor(u => u.Name)
        @Html.TextBoxFor(u => u.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Department)
        @Html.TextBoxFor(u => u.Department, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Department)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Role)
        @Html.TextBoxFor(u => u.Role, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Role)
    </div>


    @Html.HiddenFor(u => u.Id)

    <button type="submit" class="btn btn-primary">Uložit</button>
}
